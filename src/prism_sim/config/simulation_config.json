{
  "simulation_parameters": {
    "global_constants": {
      "epsilon": 0.001,
      "weeks_per_year": 52,
      "random_seed": 42
    },
    "scoring": {
      "service_index_base": 100.0,
      "backlog_penalty_divisor": 1000.0,
      "truck_fill_scale": 100.0,
      "oee_scale": 100.0
    },
    "calendar": {
      "weeks_per_year": 52
    },
    "agents": {
      "replenishment": {
        "target_days_supply": 7.0,
        "reorder_point_days": 3.0,
        "min_order_qty": 10.0,
        "batch_size_cases": 50.0
      }
    },
    "demand": {
      "seasonality": {
        "amplitude": 0.2,
        "phase_shift_days": 150,
        "cycle_days": 365
      },
      "noise": {
        "gamma_shape": 10.0,
        "gamma_scale": 0.1
      },
      "category_profiles": {
        "ORAL_CARE": { "base_daily_demand": 1.2 },
        "PERSONAL_WASH": { "base_daily_demand": 1.0 },
        "HOME_CARE": { "base_daily_demand": 0.8 },
        "INGREDIENT": { "base_daily_demand": 0.0 }
      }
    },
    "inventory": {
      "initial_fg_level": 20.0,
      "initialization": {
        "store_days_supply": 14.0,
        "rdc_days_supply": 21.0,
        "rdc_store_multiplier": 1500.0
      }
    },
    "logistics": {
      "constraints": {
        "truck_max_weight_kg": 20000.0,
        "truck_max_volume_m3": 60.0,
        "epsilon_weight_kg": 0.001,
        "epsilon_volume_m3": 0.0001
      },
      "default_lead_time_days": 3.0
    },
    "manufacturing": {
      "target_days_supply": 14.0,
      "reorder_point_days": 7.0,
      "min_production_qty": 5000.0,
      "production_lead_time_days": 3,
      "production_hours_per_day": 100.0,
      "backup_supplier_cost_premium": 0.25,
      "default_yield_percent": 98.5,
      "recall_batch_trigger_day": 30,
      "recall_scenario": {
        "product_id": "SKU-DET-001",
        "batch_id": "B-2024-RECALL-001",
        "status": "hold",
        "notes": "RECALL: Contaminated sorbitol detected - isolate and quarantine"
      },
      "spof": {
        "ingredient_id": "ING-SURF-SPEC",
        "primary_supplier_id": "SUP-SURF-SPEC",
        "backup_supplier_id": "SUP-SURF-BACKUP",
        "warning_threshold": 10.0
      },
      "initial_plant_inventory": {
        "ING-SURF-SPEC": 10000000.0,
        "ING-BASE-LIQ": 10000000.0
      }
    },
    "validation": {
      "oee_range": [0.65, 0.85],
      "truck_fill_target": 0.85,
      "slob_max_pct": 0.30,
      "inventory_turns_range": [6.0, 14.0],
      "cost_per_case_range": [1.00, 3.00],
      "mass_balance_drift_max": 0.02
    },
    "quirks": {
      "port_congestion": {
        "enabled": true,
        "ar_coefficient": 0.70,
        "noise_std_hours": 2.0,
        "cluster_threshold_hours": 4.0,
        "cluster_size": 3,
        "cluster_delay_min_hours": 2.0,
        "cluster_delay_max_hours": 6.0,
        "affected_ports": ["USLAX", "CNSHA"]
      },
      "optimism_bias": {
        "enabled": true,
        "bias_pct": 0.15,
        "affected_age_months": 6
      },
      "phantom_inventory": {
        "enabled": true,
        "shrinkage_pct": 0.02,
        "detection_lag_days": 14,
        "shrinkage_factor_min": 0.5,
        "shrinkage_factor_max": 1.0
      }
    },
    "risk_events": {
      "enabled": true,
      "events": [
        {
          "code": "RSK-LOG-002",
          "type": "port_strike",
          "trigger_day": 120,
          "duration_days": 14,
          "parameters": { "delay_multiplier": 4.0 }
        },
        {
          "code": "RSK-CYB-004",
          "type": "cyber_outage",
          "trigger_day": 200,
          "duration_days": 3,
          "parameters": { "delay_multiplier": 10.0 }
        }
      ]
    }
  }
}
