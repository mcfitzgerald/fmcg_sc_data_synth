{
  "simulation_parameters": {
    "calendar": {
      "weeks_per_year": 52
    },
    "agents": {
      "replenishment": {
        "target_days_supply": 7.0,
        "reorder_point_days": 3.0,
        "min_order_qty": 10.0,
        "batch_size_cases": 50.0
      }
    },
    "demand": {
      "category_profiles": {
        "ORAL_CARE": { "base_daily_demand": 50.0 },
        "PERSONAL_WASH": { "base_daily_demand": 30.0 },
        "HOME_CARE": { "base_daily_demand": 20.0 },
        "INGREDIENT": { "base_daily_demand": 0.0 }
      }
    },
    "inventory": {
      "initial_fg_level": 100.0
    },
    "logistics": {
      "constraints": {
        "truck_max_weight_kg": 20000.0,
        "truck_max_volume_m3": 60.0
      },
      "default_lead_time_days": 3.0
    },
    "manufacturing": {
      "target_days_supply": 14.0,
      "reorder_point_days": 7.0,
      "min_production_qty": 100.0,
      "production_lead_time_days": 3,
      "production_hours_per_day": 16.0,
      "backup_supplier_cost_premium": 0.25,
      "default_yield_percent": 98.5,
      "recall_batch_trigger_day": 30,
      "spof": {
        "ingredient_id": "ING-SURF-SPEC",
        "primary_supplier_id": "SUP-SURF-SPEC",
        "backup_supplier_id": "SUP-SURF-BACKUP",
        "warning_threshold": 10.0
      },
      "initial_plant_inventory": {
        "ING-SURF-SPEC": 1000.0,
        "ING-BASE-LIQ": 5000.0
      }
    },
    "validation": {
      "oee_range": [0.65, 0.85],
      "truck_fill_target": 0.85,
      "slob_max_pct": 0.30,
      "inventory_turns_range": [6.0, 14.0],
      "cost_per_case_range": [1.00, 3.00],
      "mass_balance_drift_max": 0.02
    },
    "quirks": {
      "port_congestion": {
        "enabled": true,
        "ar_coefficient": 0.70,
        "noise_std_hours": 2.0,
        "cluster_threshold_hours": 4.0,
        "cluster_size": 3,
        "affected_ports": ["USLAX", "CNSHA"]
      },
      "optimism_bias": {
        "enabled": true,
        "bias_pct": 0.15,
        "affected_age_months": 6
      },
      "phantom_inventory": {
        "enabled": true,
        "shrinkage_pct": 0.02,
        "detection_lag_days": 14
      }
    },
    "risk_events": {
      "enabled": true,
      "events": [
        {
          "code": "RSK-LOG-002",
          "type": "port_strike",
          "trigger_day": 120,
          "duration_days": 14,
          "parameters": { "delay_multiplier": 4.0 }
        },
        {
          "code": "RSK-CYB-004",
          "type": "cyber_outage",
          "trigger_day": 200,
          "duration_days": 3,
          "parameters": { "delay_multiplier": 10.0 }
        }
      ]
    }
  }
}
